<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Blog</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/blogs" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="blog[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="blog[image]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="desc">Blog Description</label>
                <textarea class="form-control" type="text" id="desc" name="blog[description]" 
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="body">Blog Body</label>
                <textarea class="form-control" type="text" id="body" name="blog[body]"
               required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="d-inline">
                <button class="btn btn-info mb-3">Create Blog</button>
                <a class="btn btn-info mb-3" href="/blogs">All Campgrounds</a>

            </div>
        </form>
    </div>
</div>